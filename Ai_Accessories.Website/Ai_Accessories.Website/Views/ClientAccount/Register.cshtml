@model Ai_Accessories.Website.Models.CLIENTACCOUNT

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutDetail.cshtml";
} 
<h2>Thông tin khách hàng</h2> 
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken() 
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-2"></div>
        <label class="control-label col-md-2">Account </label>
        <div class="col-md-6">
            @Html.EditorFor(model => model.AccountName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AccountName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2"></div>
        <label class="control-label col-md-2">PassWord </label>
        <div class="col-md-6">
            @Html.EditorFor(model => model.PassWord, new { htmlAttributes = new { @class = "form-control", @type="password" } })
            @Html.ValidationMessageFor(model => model.PassWord, "", new { @class = "text-danger" })
        </div>
    </div> 

    <div class="form-group">
        <div class="col-md-2"></div>
        <label class="control-label col-md-2">Your Name </label>
        <div class="col-md-6">
            @Html.EditorFor(model => model.ClientName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ClientName, "", new { @class = "text-danger" })
        </div>
    </div> 

    <div class="form-group">
        <div class="col-md-2"></div>
        <label class="control-label col-md-2">Phone Number </label>
        <div class="col-md-6">
            @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2"></div>
        <label class="control-label col-md-2">Email </label>
        <div class="col-md-6">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2"></div>
        <label class="control-label col-md-2">Address </label>
        <div class="col-md-6">
            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2"></div>
        <label class="control-label col-md-2">Note </label>
        <div class="col-md-6">
            @Html.EditorFor(model => model.Note, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2"></div>
        <div class="col-md-offset-4 col-md-6">
            <input type="submit" value="Create" class="btn btn-primary" /> 
        </div>
    </div>
</div>
} 