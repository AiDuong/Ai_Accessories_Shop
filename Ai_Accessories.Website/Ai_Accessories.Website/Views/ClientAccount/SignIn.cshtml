@model IEnumerable<Ai_Accessories.Website.Models.CLIENTACCOUNT>

@{
    ViewBag.Title = "Sign In";
    Layout = "~/Views/Shared/_LayoutDetail.cshtml";
}  
<div class="form-horizontal">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="col-md-2"></div>
            <label class="col-md-2 control-label">Tên Đăng Nhập</label>
            <div class="col-md-4">
                @Html.TextBox("Account", null, new {  @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2"></div>
            <label class="col-md-2 control-label">Mật Khẩu</label>
            <div class="col-md-4">
                @Html.TextBox("Password", null, new { @class = "form-control", @type = "password" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4"></div>
            <div class="col-md-6">
                <input type="submit" value="Đăng Nhập" class="btn btn-primary" />
                <a href="/ClientAccount/Register" class="btn btn-basic">Đăng Ký</a>
            </div>
        </div>
    }

</div>
 
