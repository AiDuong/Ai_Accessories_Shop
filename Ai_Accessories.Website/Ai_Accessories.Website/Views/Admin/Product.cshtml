@using PagedList.Mvc;
@model PagedList.PagedList<Ai_Accessories.Website.Models.SANPHAM>
@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@helper Truncate(string input, int lenght)
{
    if (input.Length < lenght)
    {
        @input
    }
    else
    {
        @input.Substring(0, lenght)<text>...</text>
    }
}
<style>
    #datatable-responsive thead tr th{
        text-align:center;
    }
</style>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2><span class="fa fa-shopping-basket" style="color:#1bc279"></span> PRODUCT</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li style="float:right">
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li> 
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <p class="text-muted font-13 m-b-30">
                    <a class="btn btn-success pull-right" href="#"><span class="fa fa-plus"></span> New Product</a>
                </p>
                <span>Total: @ViewBag.TotalProduct products</span>
                <div class="clearfix"></div>
                <hr />
                <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive" cellspacing="0" width="100%">
                    <thead>
                        <tr> 
                            <th width="40px">Code</th>
                            <th width="100px">Image</th>
                            <th>Name</th>
                            <th>Information</th>
                            <th>Type</th>
                            <th>Price</th>
                            <th>Created Date</th> 
                            <th colspan="3">Action</th>
                        </tr>
                    </thead>
                    <tbody> 
                        @foreach (var product in Model)
                        {
                            <tr> 
                                <td style="text-align:center">@product.Id</td>
                                <td style="text-align:center">
                                    <img src="https://images.unsplash.com/photo-1539840093138-9b3e230e5206?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=765a2eb222b1851840a4a157780fb487&auto=format&fit=crop&w=1534&q=80" class="img-responsive center-block">
                                    @*@product.HinhanhSP*@
                                </td>
                                <td style="text-align:left">@product.TenSP</td>
                                <td style="text-align:left">@Truncate(product.ThongtinSP, 100)</td>
                                <td style="text-align:center">@product.TenLoaiSP</td>
                                <td style="text-align:right">@string.Format("{0:n0}", product.Gia)</td>
                                <td style="text-align:center">@string.Format("{0:dd/MM/yyyy}", product.Ngaydang)</td> 
                                <td style="text-align:center">
                                    <a class="btn btn-danger btn-sm" href="#"><i class="fa fa-trash" aria-hidden="true"></i> Delete</a>
                                </td>
                                <td style="text-align:center">
                                    <a class="btn btn-success btn-sm" href="#"><i class="fa fa-pencil" aria-hidden="true"></i> Edit</a>
                                </td>
                            </tr> 
                        }
                    </tbody>
                </table>
                <div class="page" style="display:inline">
                    @Html.PagedListPager(Model, page => Url.Action("Product", new { page = page }))
                </div>
            </div>
        </div>
    </div>
</div> 