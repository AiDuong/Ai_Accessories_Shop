@using PagedList.Mvc;
@model PagedList.PagedList<Ai_Accessories.Website.Models.SANPHAM>
@{
    ViewBag.Title = "Mockhoa";
    Layout = "~/Views/Shared/_LayoutDetail.cshtml";
}
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 text-center">
                <a href="/chi-tiet-san-pham/@item.Id">
                    <img style="max-height:200px;width:70%" src="https://images.unsplash.com/photo-1539840093138-9b3e230e5206?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=765a2eb222b1851840a4a157780fb487&auto=format&fit=crop&w=1534&q=80" />
                </a>
                <a class="product-name" href="/chi-tiet-san-pham/@item.Id" style="color:black;text-decoration: none">
                    <h4 class="text-center">@item.TenSP</h4>
                </a>
                <h5 class="text-center">@item.Gia VNĐ</h5>
            </div>
        }
    </div>
    <div class="page text-right" style="display:inline">
        @Html.PagedListPager(Model, page => Url.Action("Product", new { page = page }))
    </div>
</div>
