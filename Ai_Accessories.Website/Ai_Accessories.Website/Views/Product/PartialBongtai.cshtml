@model IEnumerable<Ai_Accessories.Website.Models.SANPHAM>
<div class="container-fluid">
    <h2 class="title-collection" style="font-size:19px;padding-left: 15px;">Bông tai</h2>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12">
            <div class="carousel carousel-showmanymoveone slide itemslider" id="PbongTai">
                <div class="carousel-inner">
                    @{int firstProduct = 1;}
                    @foreach (var item in Model)
                    {
                        if (firstProduct == 1)
                        {
                            <div class="item active">
                                <div class="col-xs-12 col-sm-6 col-md-2">
                                    <a href="chi-tiet-san-pham/@item.Id">
                                        <img src="~/Content/images/@item.HinhanhSP" class="img-responsive center-block">
                                    </a>
                                    <h4 class="text-center">@item.TenSP</h4>
                                    <h5 class="text-center">@String.Format("{0:n0}", item.Gia) VNĐ</h5>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="item">
                                <div class="col-xs-12 col-sm-6 col-md-2">
                                    <a href="chi-tiet-san-pham/@item.Id">
                                        <img src="~/Content/images/@item.HinhanhSP" class="img-responsive center-block">
                                    </a>
                                    <h4 class="text-center">@item.TenSP</h4>
                                    <h5 class="text-center">@String.Format("{0:n0}", item.Gia) VNĐ</h5>
                                </div>
                            </div>
                        }
                        firstProduct++;
                    }
                </div>
                <div id="slider-control">
                    <a class="left carousel-control" href="#PbongTai" data-slide="prev">
                        <span class="glyphicon glyphicon-menu-left btn-prev"></span>
                    </a>
                    <a class="right carousel-control" href="#PbongTai" data-slide="next">
                        <span class="glyphicon glyphicon-menu-right btn-next"></span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<script defer type="text/javascript">
    $(document).ready(function () {
        $('#PbongTai .item').each(function () {
            var itemToClone = $(this);

            for (var i = 1; i < 6; i++) {
                itemToClone = itemToClone.next();

                if (!itemToClone.length) {
                    itemToClone = $(this).siblings(':first');
                }
                itemToClone.children(':first-child').clone()
                    .addClass("cloneditem-" + (i))
                    .appendTo($(this));
            }
        });
    });
</script>

