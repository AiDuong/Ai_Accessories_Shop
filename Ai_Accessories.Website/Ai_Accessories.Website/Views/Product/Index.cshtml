@model IEnumerable<Ai_Accessories.Website.Models.SANPHAM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="product-home-collection" style="background-color: white">
    <!-- Hot Product slider-->
    @Html.Action("PartialSanPhamBanChay", "Product", new { number = 10 })
    <!-- Hot Product slider end-->
</section>
<br />
<style>
    .container-fluid {
       padding: 10px 0px;
    }
</style>
<section class="product-home-collection" style="background-color: white">
    <!-- New Product slider-->
    <div class="container-fluid">
        <h2 class="title-collection"style="font-size:19px;padding-left: 15px;">Sản phẩm mới</h2>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12">
                <div class="carousel carousel-showmanymoveone slide" id="itemslider">
                    <div class="carousel-inner">
                        @{int firstProduct = 1;}
                        @foreach (var item in Model)
                        {
                            if (firstProduct == 1)
                            {
                                <div class="item active">
                                    <div class="col-xs-12 col-sm-6 col-md-2">
                                        <a href="#"><img src="https://images.unsplash.com/photo-1539840093138-9b3e230e5206?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=765a2eb222b1851840a4a157780fb487&auto=format&fit=crop&w=1534&q=80" class="img-responsive center-block"></a>
                                        <h4 class="text-center">@item.TenSP</h4>
                                        <h5 class="text-center">@item.Gia</h5>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="item">
                                    <div class="col-xs-12 col-sm-6 col-md-2">
                                        <a href="#"><img src="https://images.unsplash.com/photo-1539840093138-9b3e230e5206?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=765a2eb222b1851840a4a157780fb487&auto=format&fit=crop&w=1534&q=80" class="img-responsive center-block"></a>
                                        <h4 class="text-center">@item.TenSP</h4>
                                        <h5 class="text-center">@item.Gia</h5>
                                    </div>
                                </div>
                            }
                            firstProduct++;
                        }

                    </div>
                    <div id="slider-control">
                        <a class="left carousel-control" href="#itemslider1" data-slide="prev">
                            <span class="glyphicon glyphicon-menu-left btn-prev"></span>
                        </a>
                        <a class="right carousel-control" href="#itemslider1" data-slide="next">
                            <span class="glyphicon glyphicon-menu-right btn-next"></span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- New Product slider end-->
</section>
<br />
<section class="product-home-collection" style="background-color: white">
    <!--Bong tai slider-->
    @Html.Action("PartialBongtai", "Product", new { number = 10 })
    <!--Bong tai slider end-->
</section>
<br />
<section class="product-home-collection" style="background-color: white">
    <!--Moc khoa slider-->
    @Html.Action("PartialMockhoa", "Product", new { number = 10 })
    <!--Moc khoa slider end-->
</section>
<br />
<section class="product-home-collection" style="background-color: white">
    <!--Vong tay slider-->
    @Html.Action("PartialVongTay", "Product", new { number = 10 })
    <!-- Vong tay slider end-->
</section>
<br />
<section class="product-home-collection" style="background-color: white">
    <!--Máy làm tóc slider-->
    @Html.Action("PartialMayLamToc", "Product", new { number = 10 })
    <!-- Máy làm tóc slider end-->
</section>
<br />
<section class="product-home-collection" style="background-color: white">
    <!--Cọ trang điểm slider-->
    @Html.Action("PartialCoTrangDiem", "Product", new { number = 10 })
    <!-- Cọ trang điểm slider end-->
</section>
<br>
<script defer type="text/javascript">
    $(document).ready(function () {
        $('.carousel-showmanymoveone .item').each(function () {
            var itemToClone = $(this);

            for (var i = 1; i < 6; i++) {
                itemToClone = itemToClone.next();

                if (!itemToClone.length) {
                    itemToClone = $(this).siblings(':first');
                }
                itemToClone.children(':first-child').clone()
                    .addClass("cloneditem-" + (i))
                    .appendTo($(this));
            }
        });
    }); 
</script>
