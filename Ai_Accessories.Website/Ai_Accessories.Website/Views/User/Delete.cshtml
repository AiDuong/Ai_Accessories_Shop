@model Ai_Accessories.Website.Models.USER
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
 
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2><span class="fa fa-user" style="color:#1bc279"></span> Add New Staff</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li style="float:right">
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-md-2">Account Name: </label>
                        <div class="col-md-10">
                            <label class="control-label">@Model.UserName</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Password: </label>
                        <div class="col-md-10">
                            <label class="control-label">@Model.Password</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Staff Name: </label>
                        <div class="col-md-10">
                            <label class="control-label">@Model.Hoten</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Type Account</label>
                        <div class="col-md-10">
                            @*Html.DisplayFor(model => model.LOAIUSER1.TenloaiUser)*@
                            <label class="control-label">@Model.LOAIUSER1.TenloaiUser</label>
                        </div>
                    </div>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken() 
                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-default" /> |
                            @Html.ActionLink("Back to List", "List")
                        </div>
                    }
                </div> 
            </div>
        </div>
    </div>
</div> 