@using PagedList.Mvc;
@model PagedList.PagedList<Ai_Accessories.Website.Models.USER>
@{
    ViewBag.Title = "User";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
} 
<style>
    #datatable-responsive thead tr th {
        text-align: center;
    }
</style>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2><span class="fa fa-shopping-basket" style="color:#1bc279"></span> PRODUCT</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li style="float:right">
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <p class="text-muted font-13 m-b-30">
                    <a class="btn btn-success pull-right" href="#"><span class="fa fa-plus"></span> New User</a>
                </p>
                <span>Total: @ViewBag.TotalProduct products</span>
                <div class="clearfix"></div>
                <hr />
                <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>User Id</th>
                            <th>User Name</th>
                            <th>Họ tên</th>
                            <th  width="50px" colspan="3">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="text-align:center">@item.Id</td> 
                                <td style="text-align:left">@item.UserName</td>
                                <td style="text-align:center">@item.Hoten</td>
                                <td style="text-align:center">
                                    <a class="btn btn-danger btn-sm" href="/User/Delete?id=@item.Id"><i class="fa fa-trash" aria-hidden="true"></i> Delete</a>
                                </td>
                                <td style="text-align:center">
                                    <a class="btn btn-success btn-sm" href="/User/Edit?id=@item.Id"><i class="fa fa-pencil" aria-hidden="true"></i> Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="page" style="display:inline">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
                </div>
            </div>
        </div>
    </div>
</div> 